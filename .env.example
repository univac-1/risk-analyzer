# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# Database (overridden by docker-compose.yml for local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/video_risk_analyzer

# Redis (overridden by docker-compose.yml for local)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Storage (overridden by docker-compose.yml for local)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=videos

# Application
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=mp4
